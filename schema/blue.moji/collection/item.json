{
  "lexicon": 1,
  "id": "blue.moji.collection.item",
  "defs": {
    "main": {
      "type": "record",
      "description": "A custom emoji",
      "key": "any",
      "record": {
        "type": "object",
        "required": ["name", "alt", "createdAt", "formats"],
        "properties": {
          "name": { "type": "string" },
          "alt": { "type": "string" },
          "createdAt": { "type": "string", "format": "datetime" },
          "formats": {
            "type": "union",
            "refs": ["#formats_v0"],
            "closed": false
          },
          "original": { "type": "blob" },
          "adultOnly": { "type": "boolean", "default": false },
          "copyOf": { "type": "string", "format": "at-uri" }
        }
      }
    },
    "formats_v0": {
      "type": "object",
      "required": ["png_128px"],
      "properties": {
        "png_128px": { "type": "ref", "ref": "#bytesOrBlobType" }
      }
    },
    "blobAsset": {
      "type": "object",
      "required": ["file"],
      "properties": {
        "file": {
          "type": "blob",
          "accept": ["image/png", "image/jpeg"],
          "maxSize": 262144
        }
      }
    },
    "bytesAsset": {
      "type": "object",
      "required": ["file"],
      "properties": {
        "file": { "type": "ref", "ref": "#bytesFile" }
      }
    },
    "bytesFile": {
      "type": "object",
      "required": ["bytes", "mimeType"],
      "properties": {
        "bytes": { "type": "bytes", "maxLength": 65536 },
        "mimeType": {
          "type": "string",
          "enum": ["image/png", "image/apng", "image/gif"]
        }
      }
    },
    "bytesOrBlobType": {
      "type": "object",
      "properties": {
        "blob": { "type": "ref", "ref": "#blobAsset" },
        "bytes": { "type": "ref", "ref": "#bytesAsset" }
      }
    }
  }
}
