{
  "lexicon": 1,
  "id": "blue.moji.pack.listitem",
  "defs": {
    "main": {
      "type": "record",
      "description": "Record representing a Bluemoji's inclusion in a specific pack. The AppView will ignore duplicate listitem records (I think?)",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["subject", "list", "createdAt"],
        "properties": {
          "subject": {
            "type": "ref",
            "ref": "blue.moji.collection#itemView",
            "description": "The emoji which is included in the pack"
          },
          "list": {
            "type": "string",
            "format": "at-uri",
            "description": "Reference (AT-URI) to the pack record (blue.moji.pack)"
          },
          "createdAt": { "type": "string", "format": "datetime" }
        }
      }
    }
  }
}
