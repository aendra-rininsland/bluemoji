{
  "lexicon": 1,
  "id": "dev.aendra.richtext.bluemoji",
  "defs": {
    "main": {
      "type": "record",
      "description": "A custom Bluesky emoji",
      "key": "any",
      "record": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "alt": { "type": "string" },
          "createdAt": { "type": "string", "format": "datetime" },
          "images": { "type": "ref", "ref": "#images" }
        }
      }
    },
    "images": {
      "type": "object",
      "required": ["original"],
      "properties": {
        "original": {
          "type": "blob"
        },
        "sizes": {
          "type": "ref",
          "ref": "#sizes"
        }
      }
    },
    "sizes": {
      "type": "object",
      "required": ["16", "32", "64", "128", "256"],
      "properties": {
        "16": { "type": "string", "format": "uri" },
        "32": { "type": "string", "format": "uri" },
        "64": { "type": "string", "format": "uri" },
        "128": { "type": "string", "format": "uri" },
        "256": { "type": "string", "format": "uri" }
      }
    }
  }
}
